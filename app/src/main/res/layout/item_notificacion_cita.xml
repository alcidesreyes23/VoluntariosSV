<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/noty_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/MM/yyyy"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_event"
                android:layout_centerInParent="true"
                app:tint="@color/white"
                />

            <TextView
                android:id="@+id/noty_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 am"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noty_institucion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE DE LA INSTITUCION"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/noty_oficina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALON 503"
                android:textSize="12sp"
                android:textColor="@color/color_info"
                />

            <TextView
                android:id="@+id/noty_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit atema dsadas sdasdsadsadsadas"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/noty_aviso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_warning"
                    android:text="Ver Aviso"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:drawableLeft="@drawable/ic_flag"
                    android:drawableTint="@color/color_warning"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_rectangle_round"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/noty_ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_success"
                    android:text="Ver UbicaciÃ³n"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:drawableLeft="@drawable/ic_pin"
                    android:drawableTint="@color/color_success"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_rectangle_round"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>